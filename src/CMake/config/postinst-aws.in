#!/bin/sh

if [ -n "`dkms status -m xrt-aws -v @XRT_VERSION_STRING@`" ]; then
    echo "AWS: Unloading old XRT Linux kernel modules"
    modprobe -r xocl
    modprobe -r awsmgmt

    echo "AWS: Unregistering old XRT Linux kernel module sources @XRT_VERSION_STRING@ from dkms"
    dkms remove -m xrt-aws -c /usr/src/xrt-aws-@XRT_VERSION_STRING@/dkms-aws.conf -v @XRT_VERSION_STRING@ --all
    find /lib/modules -type f -name xocl.ko -delete
    find /lib/modules -type f -name awsmgmt.ko -delete
    find /lib/modules -type f -name xocl.ko.kz -delete
    find /lib/modules -type f -name awsmgmt.ko.kz -delete
    depmod -A
fi

if [ -z "`dkms status -m xrt-aws -v @XRT_VERSION_STRING@`" ]; then
    echo "AWS: Registering new XRT Linux kernel module sources @XRT_VERSION_STRING@ with dkms"
    dkms add -m xrt-aws -c /usr/src/xrt-aws-@XRT_VERSION_STRING@/dkms-aws.conf -v "@XRT_VERSION_STRING@"
fi

if [ -e /lib/modules/`uname -r`/build/include ]; then
    echo "AWS: Building XRT Linux kernel modules sources with dkms"
    dkms build -m xrt-aws -c /usr/src/xrt-aws-@XRT_VERSION_STRING@/dkms-aws.conf -v "@XRT_VERSION_STRING@"
    echo "AWS: Installing XRT Linux kernel modules sources with dkms"
    dkms install -m xrt-aws -c /usr/src/xrt-aws-@XRT_VERSION_STRING@/dkms-aws.conf -v "@XRT_VERSION_STRING@" --force
    install -m 644 /usr/src/xrt-aws-@XRT_VERSION_STRING@/driver/xclng/drm/xocl/userpf/10-xocl.rules /etc/udev/rules.d
    install -m 644 /usr/src/xrt-aws-@XRT_VERSION_STRING@/driver/aws/kernel/mgmt/10-awsmgmt.rules /etc/udev/rules.d

    echo "AWS: Loading new XRT Linux kernel modules"
    udevadm control --reload-rules
    modprobe awsmgmt
    modprobe xocl
    udevadm trigger
else
    echo "Build/Install of XRT Linux kernel modules skipped since Linux kernel headers are not installed"
fi

exit 0
